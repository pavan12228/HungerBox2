<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="justjava.android.example.packagecom.hungerbox.MainActivity">

    <TextView
        android:id="@+id/sasken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:text="@string/sasken_cafe"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/sasken"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeLayout">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">

                    <EditText
                        android:id="@+id/EtInputEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                        android:drawablePadding="5dp"
                        android:hint="username/email"
                        android:inputType="textPersonName" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/EtInputpwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textInputEmail"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_https_black_24dp"
                        android:hint="password"
                        android:inputType="textPassword"
                        tools:ignore="RtlCompat" />


                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="185dp">

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#59cc42"
                    android:text="Login"
                    android:textSize="16sp" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1" />

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#59cc42"
                    android:text="Clear"
                    android:textSize="16sp" />

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </RelativeLayout>


    <TextView
        android:id="@+id/mtxtSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="410dp"
        android:gravity="center"
        android:text="Signup Here"
        android:textAllCaps="false"
        android:textColor="#313131"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mtxtForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="450dp"
        android:gravity="center"
        android:text="Forgot password ?"
        android:textAllCaps="false"
        android:textColor="#313131"
        android:textSize="14sp" />




</RelativeLayout>
